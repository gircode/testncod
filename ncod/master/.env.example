# API配置
API_V1_STR=/api/v1
PROJECT_NAME=NCOD Master

# 安全配置
SECRET_KEY=your-super-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24小时

# 数据库配置
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=ncod_master

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# 监控配置
MONITOR_INTERVAL=60  # 监控指标采集间隔(秒)
ALERT_CHECK_INTERVAL=300  # 告警检查间隔(秒)
SLAVE_HEALTH_CHECK_INTERVAL=60  # 从服务器健康检查间隔(秒)

# 告警阈值
CPU_ALERT_THRESHOLD=80.0  # CPU使用率告警阈值(%)
MEMORY_ALERT_THRESHOLD=80.0  # 内存使用率告警阈值(%)
DISK_ALERT_THRESHOLD=80.0  # 磁盘使用率告警阈值(%)

# 数据管理配置
DATA_RETENTION_DAYS=30  # 数据保留天数
DATA_CLEANUP_INTERVAL=86400  # 数据清理间隔(秒)
DATA_ARCHIVE_INTERVAL=86400  # 数据归档间隔(秒)

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 邮件配置
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=your-email@gmail.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=true
MAIL_SSL=false
MAIL_USE_CREDENTIALS=true

# 用户配置
MAX_MAC_ADDRESSES=5  # 每个用户最多绑定的MAC地址数
PASSWORD_EXPIRE_DAYS=90  # 密码过期天数
MAX_LOGIN_ATTEMPTS=5  # 最大登录尝试次数
ACCOUNT_LOCK_MINUTES=30  # 账户锁定时间(分钟)
VERIFICATION_CODE_EXPIRE_HOURS=24  # 验证码过期时间(小时)

# VirtualHere配置
VIRTUALHERE_SERVER_HOST=localhost
VIRTUALHERE_SERVER_PORT=7575
VIRTUALHERE_API_KEY=your-api-key

# 设备配置
DEVICE_ALLOCATION_TIMEOUT=3600  # 设备分配超时时间(秒)
MAX_DEVICES_PER_USER=5  # 每用户最大设备数
DEVICE_HEARTBEAT_INTERVAL=60  # 设备心跳间隔(秒)
DEVICE_OFFLINE_TIMEOUT=300  # 设备离线超时时间(秒) 