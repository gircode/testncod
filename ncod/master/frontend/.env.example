# 基本设置
APP_NAME=Master Server
APP_VERSION=1.0.0
DEBUG=true

# 服务器设置
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# 数据库设置
DATABASE_URL=postgresql+asyncpg://user:password@localhost/master_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Redis设置
REDIS_URL=redis://localhost
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=10

# 缓存设置
CACHE_TTL=300
METRICS_CACHE_TTL=30
STATS_CACHE_TTL=60

# WebSocket设置
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000
WS_MAX_LIFETIME=3600

# 安全设置
# 在生产环境中更改这些值！
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# CORS设置
# 在生产环境中限制这些值！
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# 日志设置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log

# 设备监控设置
DEVICE_METRICS_INTERVAL=60
DEVICE_HEARTBEAT_TIMEOUT=300
MAX_METRICS_HISTORY=1000

# 任务设置
MAX_CONCURRENT_TASKS=100
TASK_QUEUE_SIZE=1000
TASK_DEFAULT_TIMEOUT=3600 